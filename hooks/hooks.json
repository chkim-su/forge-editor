{
  "hooks": [
    {
      "event": "PreToolUse",
      "matcher": {
        "tool_name": "Write|Edit|Bash"
      },
      "hooks": [
        {
          "type": "command",
          "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/forge-hook.py pre-tool"
        }
      ]
    },
    {
      "event": "SessionStart",
      "hooks": [
        {
          "type": "command",
          "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/forge-hook.py session-start"
        }
      ]
    },
    {
      "event": "PostToolUse",
      "matcher": {
        "tool_name": "Task"
      },
      "hooks": [
        {
          "type": "command",
          "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/forge-hook.py post-tool"
        }
      ]
    },
    {
      "event": "UserPromptSubmit",
      "hooks": [
        {
          "type": "command",
          "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/forge-hook.py user-prompt"
        }
      ]
    },
    {
      "event": "Stop",
      "hooks": [
        {
          "type": "command",
          "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/forge-hook.py stop"
        }
      ]
    }
  ]
}
